<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ticket_bg"
    android:padding="15dp"
    android:paddingStart="20dp"
    android:layout_marginBottom="30dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Seat: "
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat "
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="@+id/tvSeat"
        app:layout_constraintStart_toEndOf="@+id/tvSeat"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSeat"
        app:layout_constraintStart_toStartOf="@+id/tvSeat"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:text="Date: "/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/seat"
        app:layout_constraintStart_toStartOf="@id/seat"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:text="Date "/>
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        app:layout_constraintStart_toStartOf="@+id/tvDate"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:text="Time: "/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintStart_toStartOf="@id/date"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:text="Time "/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="123dp"
        android:layout_height="141dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ticket_mv" />

</androidx.constraintlayout.widget.ConstraintLayout>