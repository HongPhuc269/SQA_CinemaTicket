<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.hanu.cinematicket">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CinemaTicket">
        <activity
            android:name=".ui.TicketActivity"
            android:exported="false"
            android:parentActivityName=".ui.ChooseSeatActivity"
            android:theme="@style/bg"/>
        <activity
            android:name=".ui.ProfileActivity"
            android:exported="false"
            android:parentActivityName=".ui.HomeActivity"
            android:theme="@style/bg" />
        <activity
            android:name=".ui.ChooseSeatActivity"
            android:exported="false"
            android:parentActivityName=".ui.MovieDetailActivity"
            android:theme="@style/bg" />
        <activity
            android:name=".ui.MovieDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.HomeActivity"
            android:theme="@style/bg" />
        <activity
            android:name=".ui.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SuccessActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/bg"/>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/button_background" />

        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>